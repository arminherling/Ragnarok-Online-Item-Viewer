<Window x:Class="RagnarokOnlineItemViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RagnarokOnlineItemViewer"
        xmlns:views ="clr-namespace:RagnarokOnlineItemViewer.Views"
        xmlns:viewModels="clr-namespace:RagnarokOnlineItemViewer.ViewModels"
        mc:Ignorable="d"
        Title="Ragnarok Online Item Viewer" Height="400" Width="800">

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModels:ItemsViewModel}">
            <views:ItemsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:ItemDetailsViewModel}">
            <views:ItemDetailsView/>
        </DataTemplate>
    </Window.Resources>
    <Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <ContentControl Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
